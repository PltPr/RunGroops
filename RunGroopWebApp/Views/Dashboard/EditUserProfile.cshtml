@model EditUserViewModel


<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
	<input type="hidden" itemid="Id" name = "Id" asp-for="Id" />
	<div class="mb-3">
		<label asp-for="Pace" class="form-label">Pace</label>
		<input asp-for="Pace" class="form-control"  placeholder="Pace" />
		<span asp-validation-for="Pace" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Mileage" class="form-label">Mileage</label>
		<input asp-for="Mileage" class="form-control" placeholder="Mileage" />
		<span asp-validation-for="Mileage" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Image" class="form-label">Image</label>
		<input asp-for="Image" type="file" class="form-control" placeholder="Image" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>



	<div class="mb-3">
		<label asp-for="City" class="form-label">City</label>
		<input asp-for="City" class="form-control" placeholder="City" />
		<span asp-validation-for="City" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="State" class="form-label">State</label>
		<input asp-for="State" class="form-control" placeholder="State" />
		<span asp-validation-for="State" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
</form>