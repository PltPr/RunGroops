@{
}
@model UserDetailViewModel





<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="row g-0">
                    <!-- Kolumna dla zdjęcia -->
                    <div class="col-md-4">
                       <img src="@((Model.Image == null) ? "https://bootdey.com/img/Content/avatar/avatar7.png" : Model.Image)" class="img-fluid rounded-start" alt="User Image">
                    </div>
                    <!-- Kolumna dla informacji o użytkowniku -->
                    <div class="col-md-8">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">User Details</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">User Information</h6>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong>Username: </strong>@Model.UserName
                                </li>
                                <li class="list-group-item">
                                    <strong>Pace: </strong>@(Model.Pace!=null ? Model.Pace : "N/A")
                                </li>
                                <li class="list-group-item">
                                    <strong>Mileage: </strong>@(Model.Mileage!=null ? Model.Mileage : "N/A")
                                </li>
                            </ul>
                        </div>
                        @if (User.Identity.IsAuthenticated && (User.GetUserId() == Model.Id || User.IsInRole("admin")))
                        {
                        <div class="card-footer">
                            <a  class="btn btn-warning" asp-action="EditUserProfile" asp-controller="Dashboard">Edit</a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
